<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="577.0" prefWidth="767.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.proyect.hibernatejavafx.javafxcontrollers.VideoGameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TableView fx:id="videoGameTableStatistic" prefHeight="222.0" prefWidth="721.0">

        <columns>
            <TableColumn fx:id="videoGameIdStatistic" prefWidth="75.0" text="Id" />
            <TableColumn fx:id="videoGameNameStatistic" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="videoGamePlataformStatistic" prefWidth="75.0" text="Plataform" />
            <TableColumn fx:id="videoGamePegiStatistic" prefWidth="75.0" text="Pegi" />
            <TableColumn fx:id="videoGameCategoryStatistic" prefWidth="75.0" text="Category" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
   <Label text="Search videogames by player" />
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
         <TextField id="gamesMoreThan2Players" fx:id="gamesMoreThan2Players" prefHeight="24.0" prefWidth="466.0"/>
       <Button minWidth="78.0" mnemonicParsing="false" prefHeight="24.0" text="Videogames with more than two players"  onAction="#videoGameWithMoreThan2Players"/>
     </buttons>
   </ButtonBar>

    
    <Button onAction="#toMenu" text="Menu" />



</VBox>
